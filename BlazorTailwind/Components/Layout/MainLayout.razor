@inherits LayoutComponentBase

<div class="flex flex-col h-screen overflow-hidden">
    <header class="w-full text-center border-b border-grey p-4">

        <div class="top-row ps-3 navbar navbar-dark">
            <div class="flex flex-row justify-end">
            <h1 class="flex-1 text-2xl font-semibold text-left">
                <a class="navbar-brand" href="">Blazor Tailwind</a>
            </h1>
            <div class="top-row px-4">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </div>
            </div>
        </div>
    </header>

    <div class="flex-1 overflow-y-scroll">
    <div class="flex flex-row flex-wrap py-4">
            <aside class="w-full sm:w-1/3 md:w-1/6 px-2 bg-gray-100 rounded-lg">
        <NavMenu />
        </aside>


            <main role="main" class="w-full sm:w-2/3 md:w-5/6 pt-1 px-4">


        <article>
            @Body
        </article>
    </main>

        
    </div>
    </div>
    <footer class="w-full text-center border-t border-grey p-4">@DateTime.Now.Year</footer>
</div>

